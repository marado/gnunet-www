{% extends "common/base.j2" %}
{% block body_content %}
  {% import 'inc/news.macro.j2' as news %}
  <div class="container-fluid">
    <div class="container">
      <article>
        <div class="row">
          <div class="container text-center">
            <h1>{{ _("News") }}<a name="news"></a></h1>
            <section>
              <p>
                News posts published by GNUnet about changes related to
                GNUnet, releases, and events &#8211; <a href="{{ url_localized('rss.xml')}}">subscribe to our RSS feed</a>
              </p>
            </section>
          </div>
        </div>
        <div class="row">
          <ul class="timeline">
          {% for item in newsdata %}
            <li>
              {{ news.newspreview(item) }}
            </li>
          {% endfor %}
          </ul>
        </div>
      </article>
    </div>
  </div>
{% endblock body_content %}
